<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{pageTitle}}</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
    integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@434&display=swap" rel="stylesheet">
  <style>
    body {
      display: flex;
      justify-content: center;
      height: 100vh;
      margin-top: -47px;
      font-family: "Roboto", sans-serif;
      font-weight: bold;
      background-color: #ffffff;
    }

    .card {
      color: rgb(255, 255, 255);
      width: 30%;
      max-height: 100vh;
      min-height: 50vh;
      overflow-y: auto;
      scrollbar-width: thin;
      scrollbar-color: red transparent;
      background: #ffffff;
      border-radius: 10px;
      box-shadow: 0 10px 8px rgba(0, 0, 0, 0.1);
      padding: 0px;
      font-weight: bold;
      position: relative;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      animation: shadowAnimation 2s infinite;
      margin-top: 50px;
    }

    @keyframes shadowAnimation {
      0% {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1), 0 0 10px rgba(89, 166, 31, 0.5);
      }

      50% {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1), 0 0 20px rgba(89, 166, 31, 0.7);
      }

      100% {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1), 0 0 10px rgba(89, 166, 31, 0.5);
      }
    }

    .top,
    .bottom {
      position: sticky;
      width: 100%;
      height: 50px;
      background-color: #59a61f;
      z-index: 1;
    }

    .top {
      top: 0;
      border-radius: 10px 5px 0 0;
      height: 8vh;
    }

    .top h4 {
      margin: 0;
      position: absolute;
      top: 10px;
      left: 12px;
    }

    .bottom {
      bottom: 0;
      width: calc(110% + 5px);
      border-radius: 0 0 10px 7px;
      margin-left: -22px;
    }

    @media (max-width: 1080px) and (max-height: 2340px) {
      body {
        background-color: #f0f0f0;
      }

      .card {
        width: 100%;
        max-height: 100vh
      }

      .top {
        top: 0;
        border-radius: 10px 5px 0 0;
        height: 6.5vh;
      }
    }

    .item-row {
      color: black;
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 10px;
      border-bottom: 1px dotted rgb(153, 153, 153);
      padding: 0px;
      background-color: #ffffff;
      border-radius: 5px;
    }

    .card-body {
      flex-grow: 1;
      overflow-y: auto;
    }

    .hidden {
      display: none;
    }

    .bottom {
      align-self: flex-end;
      width: 100%;
      border: #59a61f;
      background-color: #59a61f;
      color: white;
      border-radius: 5px;
      padding: 10px;
      cursor: pointer;
      position: sticky;
      bottom: 0;
      font-weight: bold;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .bottomm {
      align-self: flex-end;
      width: 100%;
      border: none;
      height: 50px;
      background-color: white;
      color: white;
      border-radius: 5px;
      padding: 10px;
      cursor: pointer;
      position: sticky;
      bottom: 0;
      font-weight: bold;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .place-order-btn {
      background-color: #59a61f;
      font-weight: 500;
      display: flex;
      justify-content: center;
      color: black;
      border: 2px solid #59a61f;
      padding: 5px 15px;
      border-radius: 5px;

      cursor: pointer;
    }

    .item-count {
      color: black;
      font-size: 18px;
    }

    .quantity-form {
      display: flex;
      align-items: center;


    }

    .qty {
      width: 50px;
      text-align: center;
      margin: 0 5px;
    }

    input.qtyplus,
    input.qtyminus {
      width: 30px;
      height: 25px;
      background-color: #59a61f;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    .qty input {
      width: 10px;
    }

    .qty {
      background-color: rgb(209, 236, 166);
      border: none;

    }

    .qtyplus,
    .qtyminus {
      background-color: #59a61f;
      border-radius: 5px;
      width: 25px;
      color: white;
      border: none;
    }

    .card ::-webkit-scrollbar {
      width: 2px;

    }


  </style>
</head>

<body>

  <div class="card mt-5">
    <div class="top">
      <h4 class="med">Selected Items</h4>
    </div>
    <div class="card-body" id="itemsContainer">
     
      {{#each selectedItems}}
      <div class="item-row">
        <div class="item-info">
          <h5>{{name}}</h5>
  <div class="price">{{price}}</div>
        </div>
        <div class="item-details">
          <div class="quantity-form">
            <button class="qtyminus" field='quantity'>-</button>
            <input type='text' name='quantity' value='{{quantity}}' class='qty' />
            <button class="qtyplus" field='quantity'>+</button>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
    <div class="bottomm">
      <p style="color: black;">Total Price: <span id="totalPrice" style="font-weight: 200;">0</span></p>
      <p class="item-count" >Total price: <span style="font-weight: 200;" > {{selectedItems.length}}</span></p>
    </div>
    <button class="bottom" onclick="placeOrder()">Place Order</button>
  </div>

  <script>






    function updateTotalPrice() {
      const items = document.querySelectorAll('.item-row');
      let totalPrice = 0;

      items.forEach(item => {
        const quantityElement = item.querySelector('input.qty');
        const priceElement = item.querySelector('.price');

        if (quantityElement && priceElement) {
          const priceMatch = priceElement.textContent.match(/\d+\.\d+/);
          const quantityMatch = quantityElement.value;

          if (priceMatch && quantityMatch) {
            const price = parseFloat(priceMatch[0]);
            const quantity = parseInt(quantityMatch, 10);
            totalPrice += quantity * price;
          }
        }
      });

      document.getElementById('totalPrice').textContent = Number(totalPrice).toFixed(2);
      document.getElementById('totalPrice').textContent = totalPrice.toFixed(2);
    }




    function placeOrder() {
      alert('Order placed successfully!');
    }

    document.addEventListener('DOMContentLoaded', function () {
      updateTotalPrice();
    });

    document.querySelectorAll('.qtyplus, .qtyminus').forEach(function (element) {
      element.addEventListener('click', function () {
        const fieldName = this.getAttribute('field');
        const parent = this.parentElement;
        const input = parent.querySelector("input[name=" + fieldName + "]");
        let currentVal = parseInt(input.value, 10);

        if (!isNaN(currentVal)) {
          if (this.classList.contains('qtyplus')) {
            input.value = currentVal + 1;
          } else if (this.classList.contains('qtyminus') && currentVal > 1) {
            input.value = currentVal - 1;
          }
        } else {
          input.value = 1;
        }

        updateTotalPrice();
      });
    });
  </script>

</body>

</html>